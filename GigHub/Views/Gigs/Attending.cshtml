@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gigs I am Attending</h2>
<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>

            <div class="details">
                <span class="artist">
                    @gig.Artist.UserName
                </span>

                <span class="genre">
                    @gig.Genre.Name
                </span>
            </div>
        </li>
    }
</ul>
